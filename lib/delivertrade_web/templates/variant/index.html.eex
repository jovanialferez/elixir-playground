<h1><%= @product.name %> Variants</h1>

<table>
  <thead>
    <tr>
      <th>SKU</th>
      <th>Price</th>
      <th>Size</th>
      <th>Color</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= for variant <- @variants do %>
      <tr>
        <td>
          <%= variant.sku %>
        </td>
        <td>
          <%= variant.price %>
        </td>
        <td>
          <%= variant.size_label %>
        </td>
        <td>
          <%= variant.color_label %>
        </td>
        <td>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>

<span>
  <%= link "New Variant" , to: Routes.variant_path(@conn, :new, @product) %>
</span>